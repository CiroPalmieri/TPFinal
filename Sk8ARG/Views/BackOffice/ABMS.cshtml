@using Sk8ARG.Models
@model SkateParks
<link rel="stylesheet" type="text/css" href="~/Content/EstilosABM.css" />

@{
    ViewBag.Title = "ABMS";
}
<h2>ABMSkatePark</h2>
@Html.ActionLink("Ingresar nuevo SKP", "ingresar", "BackOffice", new { accion = "Ingresar" }, null)
<table>
    @foreach (SkateParks SKP in ViewBag.Lskp)
    {
        <tr>
            <th>Nombre</th>
            <th>Foto</th>
            <th>Destacar</th>
            <th>Eliminar</th>
            <th>Editar</th>
        </tr>
        <tr>
            <td id="a2">@SKP.Nombre</td>
            <td><img src="~/Content/images/@SKP.Imagen" width="199" height="99" /></td>
            @if (SKP.Destacado)
            {
                <td id="a1"><img src="~/Content/images/yadestacada.jpg" width="199" height="99" /></td>
            }
            else
            {
                <td id="a1"><img src="~/Content/images/destacar.jpg" width="199" height="99" /></td>
            }
            <td id="a1"><a href='@Url.Action("eliminar", "Backoffice", new { idSKP = SKP.IdSkatePark })'>X</a></td>
            <td id="a1"><a href='@Url.Action("editar", "Backoffice", new { idSKP = SKP.IdSkatePark, accion = "Editar" })'>Editar</a></td>
        </tr>
    }
</table>
