@using Sk8ARG.Models;
@model Ropa

<link rel="stylesheet" type="text/css" href="~/Content/Edit.css" />

<div class="container bootstrap snippets">
    <div class="row">
        <div class="col-xs-12 col-sm-9">
            @using (Html.BeginForm("GrabarRopa", "BackOffice", new { accion = ViewBag.accion }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.IdRopa)
                @Html.HiddenFor(model => model.Foto)
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <img src="~/Content/images/@ViewBag.Foto" alt="Foto Ropa" height="199" width="299">
                        @Html.TextBoxFor(model => model.ArchivoImagen, new { type = "file" })
                    </div>
                </div>
                <div class="panel-heading">
                    <h4 class="panel-title">Editar Foto</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <label class="col-sm-2 control-label">Nombre</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">

                        <label class="col-sm-2 control-label">Precio</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Precio, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Descripcion</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Stock</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Stock, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <div class="container-login100-form-btn">
                        <input type="submit" value="Grabar" class="btn blue" />
                    </div>
                </div>

            }

        </div>
    </div>
</div>
